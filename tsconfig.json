{
  "compilerOptions": {
    "baseUrl": "src",
    "declaration": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": false,
    "lib": ["dom", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "outDir": "bin",
    "removeComments": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "sourceMap": false,
    "target": "es5"
  },
  "exclude": [
    "**/dist",
    "node_modules",
    "**/node_modules",
    "storybook-static",
    "**/storybook-static",
    "**/*.spec.ts",
    "**/__tests__",
    "**/*.test.ts",
    "**/*.stories.tsx"
  ],
  "include": ["**/*.ts", "**/*.tsx", "**/*.js"]
}
